<div id="course-format-{{uniqid}}">
    <h2 class="accesshide">{{{title}}}</h2>

    {{> format_bulkcertification/tabs }}

    {{{completionhelp}}}
    <ul class="{{format}}" data-for="course_sectionlist">
        {{#initialsection}}
            {{$ core_courseformat/local/content/section }}
                {{> core_courseformat/local/content/section }}
            {{/ core_courseformat/local/content/section }}
        {{/initialsection}}
        {{#sections}}
            {{$ core_courseformat/local/content/section }}
                {{> core_courseformat/local/content/section }}
            {{/ core_courseformat/local/content/section }}
        {{/sections}}
    </ul>
</div>

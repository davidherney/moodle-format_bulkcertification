{{!
    @template format_bulkcertification/tabs

    Displays the complete course format.

    Example context (json):
    {
        "courseurl": "http://localhost/moodle/course/view.php?id=2",
        "activebulk": true,
        "activetpl": false,
        "activeobjectives": false,
        "activecertified": false,
        "actionbulk": "bulk",
        "actiontpl": "tpl",
        "actionobjectives": "objectives",
        "actioncertified": "certified",
        "canmanage": true,
        "pagemessages": [
            "This is a message"
        ],
        "pageerrors": [
            "This is an error"
        ]
    }
}}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link {{#activebulk}}active{{/activebulk}}" href="{{{courseurl}}}&action={{actionbulk}}">
                        {{#str}} action_bulk, format_bulkcertification {{/str}}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{#activetpl}}active{{/activetpl}}" href="{{{courseurl}}}&action={{actiontpl}}">
                        {{#str}} action_templates, format_bulkcertification {{/str}}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{#activecertified}}active{{/activecertified}}" href="{{{courseurl}}}&action={{actioncertified}}">
                        {{#str}} action_certified, format_bulkcertification {{/str}}
                    </a>
                </li>
                {{^canmanage}}
                <li class="nav-item">
                    <a class="nav-link {{#activeobjectives}}active{{/activeobjectives}}" href="{{{courseurl}}}&action={{actionobjectives}}">
                        {{#str}} action_objectives, format_bulkcertification {{/str}}
                    </a>
                </li>
                {{/canmanage}}
                {{#canmanage}}
                <li class="nav-item dropdown" role="none">
                    <a class="nav-link dropdown-toggle {{#activeobjectives}}active{{/activeobjectives}}" data-toggle="dropdown" href="#" role="menuitem" aria-haspopup="true" aria-expanded="false">
                        {{#str}} action_objectives, format_bulkcertification {{/str}}
                    </a>
                    <ul class="dropdown-menu">
                        <li class="nav-item" role="none">
                            <a class="dropdown-item" role="menuitem" href="{{{courseurl}}}&action={{actionobjectives}}">
                                {{#str}} objectives, format_bulkcertification {{/str}}
                            </a>
                        </li>
                        <li class="dropdown-divider"></li>
                        <li class="nav-item" role="none">
                            <a class="dropdown-item" href="{{{courseurl}}}&action={{actionobjectives}}&op={{operationadd}}">
                                {{#str}} addobjective, format_bulkcertification {{/str}}
                            </a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="dropdown-item" href="{{{courseurl}}}&action={{actionobjectives}}&op={{operationimport}}">
                                {{#str}} importobjectives, format_bulkcertification {{/str}}
                            </a>
                        </li>
                    </ul>
                </li>
                {{/canmanage}}
            </ul>

            <hr>

            {{#pagemessages}}
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    {{{.}}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="{{#str}} closebuttontitle {{/str}}">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{/pagemessages}}
            {{#pageerrors}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{{.}}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="{{#str}} closebuttontitle {{/str}}">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{/pageerrors}}
        </div>
    </div>
</div>
